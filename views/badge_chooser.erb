<h2><img src="<%= @org.settings['image'] || "/organizations/default.png" %>" alt=""/> Select a Badge to Embed</h2>
<p style="margin-top: -35px; padding-left: 95px;">Or create a new one.</p>

<div class="row">
<div class="span10 offset1" style="padding-top: 15px;">
  <% @badge_configs.each do |bc| %>
    <div class="badge_config select_badge_config" data-id="<%= bc.reuse_code %>" style="cursor: pointer;">
      <% settings = bc.settings || {} %>
      <a href="#"><img src='<%= settings['badge_url'] %>' style='float: left; margin-right: 10px;' class='thumbnail'/></a>
      <h2>
        <a href="#" class='name'><%= settings['badge_name'] || "Unnamed Badge" %></a>
      </h2>
      <p class='desc'><%= settings['badge_description'] %></p>

      <% if settings['hours'] %>
        <p>Approx hours: <%= settings['hours'] %></p>
      <% end %>
      <div style='clear: left;'></div>
    </div>
  <% end %>  
  <% code = Digest::MD5.hexdigest(Time.now.to_i.to_s + rand.to_s) %>
  <div class="badge_config select_badge_config" data-proposed_id="list" style="cursor: pointer;">
    <img src='https://cdn3.iconfinder.com/data/icons/other-icons/48/list-128.png' style='float: left; margin-right: 10px; height: 50px; width: 50px; padding: 5px 24px' class='thumbnail'/>
    <h2>
    Badge List
    </h2>
    <p class='desc' style="max-height: none; margin-top: -20px; padding-bottom: 5px;">
      Insert a link to the listing of all badges for the current course.
    </p>
    <div style='clear: left;'></div>
  </div>
  <div class="badge_config" data-proposed_id="<%= code %>">
    <img src='data:image/png;base64,' style='float: left; margin-right: 10px;' class='thumbnail'/>
    <h2>
    Create a New Badge
    </h2>
    <p class='desc' style="max-height: none; margin-top: -20px; padding-bottom: 5px;">
      <input type="text" name="name" placeholder="Badge Name" class="name"/>
      <button type="button" class="select_badge_config btn">Add Badge</button>
    </p>
    <div style='clear: left;'></div>
  </div>
</div>
</div>
